# PhotoDate Fix Configuration
# Copy this file to .env and modify the values as needed

# Pagination Settings
# Number of photos to display per page in the web interface
PHOTOS_PER_PAGE=250

# Directory Paths
# Directory where unprocessed scanned photos are stored
# For Docker: /app/data/photos/unprocessed
# For native: ./photos/unprocessed
PHOTOS_UNPROCESSED_DIR=./data/photos/unprocessed

# Directory where processed photos are moved to (organized by YYYY/MM/)
# For Docker: /app/data/photos/processed  
# For native: ./photos/processed
PHOTOS_PROCESSED_DIR=./data/photos/processed

# Similarity Analysis Settings
# DBSCAN epsilon parameter for photo similarity clustering
# Lower values = more strict grouping (more groups, smaller groups)
# Higher values = more loose grouping (fewer groups, larger groups)
# Typical range: 0.1 to 0.5
SIMILARITY_EPS=0.3

# Minimum number of photos required to form a similarity group
# Groups with fewer photos than this will be considered "noise"
SIMILARITY_MIN_SAMPLES=2

# Flask Web Application Settings
# Secret key for Flask sessions (change this to a random string)
FLASK_SECRET_KEY=your-secret-key-here

# Enable/disable Flask debug mode (true/false)
FLASK_DEBUG=True

# Host address for Flask server (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
FLASK_HOST=0.0.0.0

# Port for Flask server
FLASK_PORT=5000

# Scheduled Tasks Settings
# Automatic photo scan interval in hours (0 = disabled)
# Default: 1 hour - scans for new photos and runs similarity analysis
SCAN_INTERVAL_HOURS=1

# File Filtering Settings
# Ignore files containing these strings in their filename (comma-separated)
# Examples: SYNOFILE_ (Synology temp files), .DS_Store, Thumbs.db, .tmp
IGNORE_FILE_PATTERNS=SYNOFILE_,.DS_Store,Thumbs.db